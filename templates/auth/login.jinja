{% extends "_layout.jinja" %} {% block title %}Вход{% endblock %} {% block content %}
<h1 class="text-2xl font-bold mb-4">Вход</h1>
{% from "_formhelpers.jinja" import render_field %}
<form method="post" class="space-y-4">
  {{ render_field(form.email) }}
  {{ render_field(form.password, type="password") }}
  {{ render_field(form.remember_me, div_class="flex gap-2") }}
  {% if message %}
  <p class="text-red-500">{{message}}</p>
  {% endif %}
  <button type="submit" class="bg-slate-500 text-white p-2">Войти</button>
</form>
{% endblock %}